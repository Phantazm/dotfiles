# System Control {{{1
"slock"
  control + mod4 + q
"sudo shutdown -h 0"
  control + mod4 + Delete
"scrot -s"
  Print
# Commands {{{1
"dmenu_run -b -nb black -sb '#4E4E4E'"
  mod4 + space
"urxvt"
  mod4 + Return
"chromium"
  mod4 + b
"thunar"
  mod4 + t
"search-courses"
  Control + mod4 + f
# Brightness control {{{1
"xbacklight -inc 20"
   XF86MonBrightnessUp
"xbacklight -dec 20"
   XF86MonBrightnessDown
# Sound control {{{1
"amixer set \"Master\" toggle"
   shift + mod4 + m
"amixer set \"Master\" 5%+"
   shift + mod4 + k
"amixer set \"Master\" 5%-"
   shift + mod4 + j
# MPD media keys {{{1
"mpc prev"
   shift + mod4 + h
"mpc next"
   shift + mod4 + l
"mpc toggle"
   shift + mod4 + space
# Option + hjkl {{{1
"xdotool keyup alt+h && xdotool key Left && xdotool keydown alt"
   Alt + h
"xdotool keyup alt+j && xdotool key Down && xdotool keydown alt"
   Alt + j
"xdotool keyup alt+k && xdotool key Up && xdotool keydown alt"
   Alt + k
"xdotool keyup alt+l && xdotool key Right && xdotool keydown alt"
   Alt + l
# vim: fdm=marker
